    PATCH_IF (("%entry%" STRING_COMPARE_CASE "CLERIC_RANGER"       = 0)) BEGIN // cleric/ranger
      SET_2DA_ENTRY  row 1 8 1
      SET_2DA_ENTRY  row 2 8 1
